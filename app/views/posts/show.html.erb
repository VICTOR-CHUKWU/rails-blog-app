<div class="container bg-white shadow p-4">
  <div class="col-12 border border-success">
    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
    <div class='text-end'>
       <b>comments: <%= @post.comment_count %>, Likes: <%= @post.likes_count%> </b>
    </div>
  <div class="mt-3 border border-dark">
    <%= render @post.id.comments %>
  </div>
  <div class="col-12 text-center mt-3">
  <h2>Add a comment:</h2>
  <%= form_with model: [ @post, @post.comments.build ], method: :post, local: true do |form| %>
    <p>
      <%= form.text_field :text %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
  </div>
</div>